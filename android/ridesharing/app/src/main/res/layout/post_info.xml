<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:columnCount="5"
    android:rowCount="3"
    >


    //column=0 ("배송자 이름","배송자 번호", "배송자 주소")
    <TextView
        android:id="@+id/postname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배송자"
        android:textSize="10dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="top|left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/postnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="배송자번호"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="top|left"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/postaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="배송자주소"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_gravity="top|left"
        android:textSize="10dp"/>

    //column=1 ("물건", "수령자 주소","수령자 번호")
    <TextView
        android:id="@+id/thing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="택배물"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="top|left"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/receiveraddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="수령자 주소"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="top|left"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/receivernumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="수령자 번호"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_gravity="top|left"
        android:textSize="10dp"/>

    //column=2 (수령 가능 여부,날짜)
)    <CheckBox
        android:id="@+id/postcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배달 가능"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="top|left"
        android:textSize="8dp" />
    <TextView
        android:id="@+id/deliverydate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="배송 날짜"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="top|left"
        android:textSize="10dp"/>

    //special (배송 완료 여부)

    <Button
        android:id="@+id/deliverycheck"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="배달 완료"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_gravity="top|left"
        android:textSize="8dp" />
</GridLayout>